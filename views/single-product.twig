{% extends 'layout.twig' %}

{% block content %}
    <div class="product">
        <h1 class="font-weight-light text-center text-md-left">{{ post.title }}</h1>
        {% if post.categories %}
            <ul class="list-inline">
                {% for category in post.categories %}
                    <li class="list-inline-item"><a href="{{ category.link }}" class="badge badge-pill text-secondary font-weight-normal">{{ category.name }}</a></li>
                {% endfor %}
            </ul>
        {% endif %}
        <div class="image mb-3">
            <a href="{{ post.thumbnail.src('large') }}" class="simplelightbox">
                <img
                    src="{{ post.thumbnail.src('large') }}"
                    srcset="{{ post.thumbnail.srcset('large') }}"
                    sizes="{{ post.thumbnail.img_sizes('large') }}"
                    alt="{{ post.title }}"
                >
            </a>
        </div>
        <div class="content">
            {{ post.content }}
        </div>
    </div>
{% endblock %}