{% extends 'layout.twig' %}

{% block content %}
    <div class="product">
        {% include 'partials/h1.twig' with {
            title: post.title
        } %}
        {% if post.categories %}
            <ul class="list-inline">
                {% for category in post.categories %}
                    <li class="list-inline-item"><a href="{{ category.link }}" class="badge badge-pill text-secondary font-weight-normal">{{ category.name }}</a></li>
                {% endfor %}
            </ul>
        {% endif %}
        <div class="image mb-3">
            <a href="{{ post.thumbnail.src('large') }}" class="simplelightbox">
                <img
                    src="{{ post.thumbnail.src('large') }}"
                    alt="{{ post.title }}"
                >
            </a>
        </div>
        <div class="content">
            {{ post.content }}
        </div>
    </div>
{% endblock %}