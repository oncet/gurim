{% extends 'layout.twig' %}

{% block content %}
    <div class="product">
        <h1 class="font-weight-light text-center text-md-left">{{ post.title }}</h1>
        {% if post.categories %}
            <ul class="list-inline">
                {% for category in post.categories %}
                    <li class="list-inline-item"><a href="#" class="badge badge-pill pl-0 text-secondary font-weight-normal">{{ category.name }}</a></li>
                {% endfor %}
            </ul>
        {% endif %}
        <div class="image">
            <a href="{{ post.thumbnail }}" class="simplelightbox"><img src="{{ post.thumbnail.src('large') }}" alt="{{ post.title }}" /></a>
        </div>
        <br />
        <div class="content">
            {{ post.content }}
        </div>
    </div>
{% endblock %}