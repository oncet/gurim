{% block header %}
<!DOCTYPE html>
<html {{ fn('language_attributes') }}>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {{ fn('wp_head') }}

        <title>{{ fn('wp_title', '&raquo;', true, 'right') }} {{ blog_name }}</title>
    </head>
    <body>
        <div class="main-container">
            {% include 'partials/primary-menu.twig' with {
                name: 'primary-menu',
                menu: primary_menu,
                collapse: true,
                brand: true
            } %}
{% endblock %}

{% block container %}

<div class="container">
    {% block content %}

    {% endblock %}
</div>
{% endblock %}

{% block footer %}
        </div>
        {{ fn('wp_footer') }}
    </body>
</html>
{% endblock %}