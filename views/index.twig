{% extends 'layout.twig' %}

{% block content %}
    <div class="products">
        <div class="row">
            {% for product in products %}
                {% include 'partials/item.twig' with {
                    alt: product.title,
                    image: product.thumbnail.src('thumbnail'),
                    link: product.link,
                    title: product.title
                } %}
            {% endfor %}
        </div>
    </div>
{% endblock %}