{% extends 'layout.twig' %}

{% block menu %}
    {% include 'partials/secondary-menu.twig' with {
        name: 'products-menu',
        menu: products_menu
    } %}
{% endblock %}

{% block content %}
    <div class="container products">
        <div class="row">
            {% for product in products %}
                <div class="col-md-4 mb-4">
                    <a href="{{ product.link }}">
                        <img src="{{ product.thumbnail.src('thumbnail') }}" alt="{{ product.title }}" />
                        <br />
                        <div>
                            {{ product.title }}
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>

    <nav>
        <ul class="pagination justify-content-center justify-content-md-end">
            <li class="page-item {{products.pagination.prev? null : 'disabled'}}">
                <a href="{{products.pagination.prev.link}}" class="bg-transparent border-0 page-link">&laquo;</a>
            </li>
            {% for page in products.pagination.pages %}
                <li class="page-item {{page.link? null : 'disabled'}}">
                    <a href="{{page.link}}" class="bg-transparent border-0 page-link {{page.class}}">{{page.title}}</a>
                </li>
            {% endfor %}
            <li class="page-item {{products.pagination.next? null : 'disabled'}}">
                <a href="{{products.pagination.next.link}}" class="bg-transparent border-0 page-link">&raquo;</a>
            </li>
        </ul>
    </nav>
{% endblock %}