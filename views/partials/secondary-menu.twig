<nav class="navbar navbar-expand-sm p-0 mt-md-3 secondary-menu">
    <ul class="navbar-nav text-center text-md-left mx-auto mx-md-0 flex-column">
        {% for item in menu.items %}
            <li class="nav-item {{ item.classes|join(' ') }} {{ item.current ? 'active' : '' }}">
                <a
                    href="{{ item.link }}"
                    class="nav-link"
                    style="color: {{ secondary_menu_link_color }}"
                >
                    {{ item.title }}
                </a>
            </li>
        {% endfor %}
    </ul>
</nav>