<nav class="navbar navbar-expand-md navbar-light pt-0">
    <a class="navbar-brand pt-0" href="{{ site.url }}">
        {% if blog_logo %}
            <img src="{{ blog_logo }}" alt="{{ blog_name }}" />
        {% else %}
            {{ blog_title }}
        {% endif %}
    </a>
    <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#{{ name }}"
        aria-controls="{{ name }}"
        aria-expanded="false"
        aria-label="Toggle navigation"
    >
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="{{ name }}">
        <ul class="navbar-nav ml-auto">
            {% for item in menu.items %}
                <li class="nav-item ml-auto {{ item.classes|join(' ') }} {{ item.current ? 'active' : '' }}">
                    <a class="nav-link" href="{{ item.link }}">{{ item.title }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
</nav>