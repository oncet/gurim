{% extends 'layout.twig' %}

{% block content %}
    <div class="products">
        {% include 'partials/h1.twig' with {
            title: category.name
        } %}
        {{ category.description }}
        <div class="row mt-4">
            {% for product in products %}
                {% include 'partials/item.twig' with {
                    post: product
                } %}
            {% endfor %}
        </div>
    </div>
    {% include 'partials/pagination.twig' with {
        paginable: products
    } %}
{% endblock %}